<UserControl x:Class="NewsReader.View.Controls.PageTitleControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="50" d:DesignWidth="480" Height="32">
    
    <Grid x:Name="LayoutRoot">
    	<Grid.Background>
    		<SolidColorBrush Color="#FFAC1942"/>
    	</Grid.Background>
    	<TextBlock x:Name="Title" HorizontalAlignment="Left" Margin="38,0,0,0" TextWrapping="Wrap" Text="Đọc báo" VerticalAlignment="Center"/>
    	<TextBlock x:Name="Time" HorizontalAlignment="Left" Margin="410,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center"/>

    </Grid>
</UserControl>