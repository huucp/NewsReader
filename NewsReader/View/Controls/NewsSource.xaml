<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModel="clr-namespace:NewsReader.ViewModel" x:Class="NewsReader.View.Controls.NewsSource"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="480" d:DesignWidth="480" Height="100">

	<UserControl.DataContext>
		<ViewModel:NewsSourceViewModel/>
	</UserControl.DataContext>

	<Grid x:Name="LayoutRoot" Background="White">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="100"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Image x:Name="SourceIcon" HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" 
               Grid.Row="0" Source="{Binding Icon}" />
		<TextBlock x:Name="Title" Grid.Column="1" HorizontalAlignment="Left" Margin="12,18,0,0" 
			TextWrapping="Wrap" VerticalAlignment="Top" Foreground="Black" FontSize="23" FontFamily="Segoe WP"
			Text="{Binding Title}"/>
		<TextBlock x:Name="Description" Grid.Column="1" Height="40" Margin="12,46,20,0" TextWrapping="Wrap" 
			VerticalAlignment="Top" FontSize="20" TextTrimming="WordEllipsis" Foreground="#FF828282"
			Text="{Binding Description}"/>

	</Grid>
</UserControl>